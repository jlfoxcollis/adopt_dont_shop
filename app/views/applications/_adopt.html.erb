<% if @app.in_progress? %>
  <h3> Add a Pet to this Application</h3>
  <%= form_tag application_path, method: :get do %>
    <%= label_tag 'Search by Pet Name' %>
    <%= text_field_tag 'search' %>
    <div>
      <%= submit_tag 'search' %>
    </div>
  <% end %>
<% end %>
<% if @selected %>
  <% @selected.each do |selectee| %>
    <h3>Want to adopt? </h3>
    <%= link_to "#{selectee.name}", pet_path(selectee.id) %>
    <%= selectee.approximate_age %>
    <%= selectee.sex %>
    <%= selectee.adoptable %>
    <%= button_to "Adopt this Pet?", application_pets_path,
        method: :post, params: {pet_id: selectee.id, application_id: @app.id} %>
  <% end %>
<% end %>
