<body>
  <h3>Application Status:<%= @app.application_status %></h3>
  <% if @chosen_ones.count >= 1 && @app.application_status == "In Progress" %>
    <%= link_to "Submit Application", application_path(@app.id, :application_status => "Pending") %>
  <% end %>
  <% if @selected %>
    <h3>Want to adopt? </h3>
    <%= @selected.name %>
    <%= @selected.approximate_age %>
    <%= @selected.sex %>
    <%= @selected.adoptable %>
    <%= link_to "Adopt this Pet?", application_path(@app.id, :pet_id => @selected.id, :adopt => "true") %>
  <% end %>
  <% if @app.application_status == "Pending" %>
    <h3>Pets chosen for Adoption </h3>
    <% @chosen_ones.each do |pet| %>
      <%= pet.name %>
    <% end %>
  <% end %>

  <%= @app.name %>
  <%= @app.street %>
  <%=  "#{@app.city}" + ", " + "#{@app.state}" + " " + "#{@app.zip_code}" %>
  <%= @app.description %>
  <% if @app.application_status == "In Progress" %>
    <h3> Add a Pet to this Application</h3>
    <%= form_tag application_path, method: :get do %>
      <%= label_tag 'Select a Pet' %>
      <%= select_tag 'pet_id', options_for_select(@pet = @pets.collect{ |u| [u.name, u.id] }), :onchange => "this.form.submit();" %>
    <% end %>
  <% end %>

</body>
