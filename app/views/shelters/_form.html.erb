<%= form_with model: @shelter, action: "/shelters/", local: true, builder: LabellingFormBuilder do |form| %>
  <%= form.text_field :name %><br>
  <%= form.text_field :address %><br>
  <%= form.text_field :city %><br>
  <%= form.text_field :state %><br>
  <%= form.text_field :zip %><br>
  <%= form.submit button_text %><br>
<% end %>
