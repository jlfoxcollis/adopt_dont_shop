<body>
  <table class="App-list">
    <tr>
      <th>Link to Review</th>
      <th>Applicant</th>
      <th>App ID</th>
      <th>Status</th>
    </tr>
    <tr>
  <% @applications.each do |app| %>
    <% if app.pending? %>
      <section id="application-<%=app.id %>">
        <td><%= link_to "review #{app.id}", admin_application_path(app.id), method: :get %></td>
        <td><%= app.name %></td>
        <td><%= app.id %></td>
        <td><%= app.application_status %></td>
      </section>
    </tr>
    <% end %>
  <% end %>

  </tr>
  </table>
</body>
